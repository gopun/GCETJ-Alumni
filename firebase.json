{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",   
        "function": "app"
      },
      {
        "source": "**",         
        "destination": "/404.html" 
      }
    ]
  }
}
